{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist/main",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "types": ["node"],
    "lib": ["ESNext"],
    "noUnusedLocals": false
  },
  "include": ["src/main/**/*", "src/shared/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts"]
}
