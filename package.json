{
  "name": "music-production-suite",
  "version": "0.1.0",
  "description": "Music Production Suite with integrated torrent search, download management, and mixing capabilities",
  "main": "dist/main/index.cjs",
  "author": "Your Name",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=25.0.0"
  },
  "scripts": {
    "dev": "yarn build:main && yarn build:preload && concurrently \"yarn dev:renderer\" \"yarn start:dev\"",
    "dev:renderer": "vite",
    "start:dev": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "yarn build:renderer && yarn build:main && yarn build:preload",
    "build:renderer": "vite build",
    "build:main": "node scripts/build-main.mjs",
    "build:preload": "node scripts/build-preload.mjs",
    "start": "electron .",
    "package": "yarn build && electron-builder",
    "package:win": "yarn build && electron-builder --win",
    "package:mac": "yarn build && electron-builder --mac",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@chakra-ui/react": "3.31.0",
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "cheerio": "1.2.0",
    "csv-stringify": "6.6.0",
    "electron-store": "8.2.0",
    "music-metadata": "8.3.0",
    "puppeteer-core": "21.11.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.30.3",
    "uuid": "9.0.1",
    "webtorrent": "2.8.5",
    "zod": "3.25.76",
    "zustand": "4.5.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.30",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitejs/plugin-react": "4.7.0",
    "concurrently": "8.2.2",
    "cross-env": "10.1.0",
    "electron": "40.1.0",
    "electron-builder": "24.13.3",
    "esbuild": "0.27.2",
    "eslint": "8.57.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "4.6.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.4.0",
    "playwright": "1.58.1",
    "ts-jest": "^29.4.6",
    "typescript": "5.9.3",
    "vite": "5.4.21",
    "wait-on": "9.0.3"
  },
  "build": {
    "appId": "com.musicproductionsuite.app",
    "productName": "Music Production Suite",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icons/icon.icns",
      "category": "public.app-category.music"
    }
  }
}
