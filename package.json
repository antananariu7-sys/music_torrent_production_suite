{
  "name": "music-production-suite",
  "version": "0.1.0",
  "description": "Music Production Suite with integrated torrent search, download management, and mixing capabilities",
  "main": "dist/main/main/index.cjs",
  "author": "Your Name",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=25.0.0"
  },
  "scripts": {
    "dev": "yarn build:main && yarn build:preload && concurrently \"yarn dev:renderer\" \"yarn start:dev\"",
    "dev:renderer": "vite",
    "start:dev": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "yarn build:renderer && yarn build:main && yarn build:preload",
    "build:renderer": "vite build",
    "build:main": "node scripts/build-main.mjs",
    "build:preload": "node scripts/build-preload.mjs",
    "start": "electron .",
    "package": "yarn build && electron-builder",
    "package:win": "yarn build && electron-builder --win",
    "package:mac": "yarn build && electron-builder --mac",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.31.0",
    "cheerio": "^1.0.0-rc.12",
    "csv-stringify": "^6.4.0",
    "electron-store": "^8.1.0",
    "music-metadata": "^8.1.0",
    "puppeteer-core": "^21.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "uuid": "^9.0.0",
    "webtorrent": "^2.3.0",
    "zod": "^3.22.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^24.9.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "playwright": "^1.40.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vitest": "^1.0.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.musicproductionsuite.app",
    "productName": "Music Production Suite",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icons/icon.icns",
      "category": "public.app-category.music"
    }
  }
}
